pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = '398302c9-c56a-4fea-86b6-126793cac926'
        NETLIFY_AUTH_TOKEN = credentials('Netlify-token')
    }

    stages {

        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo 'Building the application...'
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

        stage('Tests') {
            parallel {
                stage('Unit Test') {
                    agent {
                        docker {
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        sh '''
                            npm test
                        '''
                    }
                    post {
                        always {
                            junit 'jest-results/junit.xml'
                        }
                    }
                }
            }
        }

        stage('E2E Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    npm run e2e
                '''
            }
            post {
                always {
                    junit 'e2e-results/junit.xml'
                }
            }
        }

        stage('Deploy to Netlify') {
            agent any
            steps {
                script {
                    def siteId = "${env.NETLIFY_SITE_ID}"
                    def authToken = "${env.NETLIFY_AUTH_TOKEN}"
                    def publishDir = "dist"

                    // Install Netlify CLI
                    sh "npm install -g netlify-cli"

                    // Deploy to Netlify
                    sh "netlify deploy --site $siteId --auth $authToken --dir $publishDir --prod"
                }
            }
        }
    }
}

