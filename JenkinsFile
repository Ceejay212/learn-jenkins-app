pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                    ls
                '''
                
            }
        }
    }
    stages {
        stage('Test') {
            steps {
                sh '''
                    echo 'testing for index.html
                    test -f /workspaces/learn-jenkinsapp/build
                '''
                
            }
        }
    }
}
